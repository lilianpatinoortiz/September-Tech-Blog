<div class="row mb-4 create-post">
  <div class="col-md-12">
    {{#if logged_in}}
      <h6> ~ All posts ~ </h6>
    {{/if}}
  </div>
</div>
<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
  <div class="row mb-4 project">
    <div class="col-md-12">
      <div class="row mb-4 project-header">
        <div class="col-md-9">
          <h2>
            <a href="/posts/{{post.id}}">{{post.name}}</a>
          </h2>
        </div>
        <div class="col-md-3">
          <p>Posted by
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <p>
        {{post.description}}
      </p>
    </div>
  </div>
{{/each}}